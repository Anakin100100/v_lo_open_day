<div>
  <h2 class="text-3xl text-center">Zaloguj się</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
  <div class="mt-2">
    <%= f.label "Email", class: "text-xl font-bold" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mt-2 mb-4">
    <%= f.label "Hasło", class: "text-xl font-bold" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

    <div class="bg-blue-500 actions hover:bg-blue-700 text-white font-bold text-center py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">
      <%= f.submit "Zaloguj się" %>
    </div>
  <% end %>
</div>
